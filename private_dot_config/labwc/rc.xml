<?xml version="1.0"?>

<labwc_config>

  <theme>
    <name>Matcha-dark-sea</name>
    <cornerRadius>15</cornerRadius>
    <font name="JetBrains Mono" size="12" />
    <keepBorder>no</keepBorder>
  </theme>

  <desktops number="3" popupTime="500" prefix="ws" />

  <keyboard>
    <default />

    <repeatRate>100</repeatRate>
    <repeatDelay>200</repeatDelay>

    <keybind key="W-Return">
      <action name="Execute" command="footclient" />
    </keybind>

    <keybind key="W-S-Return">
      <action name="Execute" command="footclient -t xterm-256color" />
    </keybind>

    <keybind key="W-q">
      <action name="Close" />
    </keybind>

    <keybind key="W-S-q">
      <action name="Kill" />
    </keybind>

    <keybind key="W-p">
      <action name="Execute" command="thunar" />
    </keybind>

    <keybind key="Print">
      <action name="Execute">
        <command>sh -c 'grim -g "$(slurp)"'</command>
      </action>
    </keybind>

    <keybind key="W-[">
      <action name="Execute">
        <command>sh -c 'pkill gammastep ; gammastep -PO 1500'</command>
      </action>
    </keybind>

    <keybind key="W-]">
      <action name="Execute">
        <command>sh -c 'pkill gammastep ; gammastep -PO 2500'</command>
      </action>
    </keybind>

    <keybind key="W-up">
      <action name="Execute" command="brightnessctl set +5%" />
    </keybind>

    <keybind key="W-down">
      <action name="Execute" command="brightnessctl set 5%-" />
    </keybind>

    <keybind key="W-right">
      <action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ +5%" />
    </keybind>

    <keybind key="W-left">
      <action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ -5%" />
    </keybind>

    <keybind key="W-r">
      <action name="Execute" command="fuzzel" />
    </keybind>

    <keybind key="W-S-r">
      <action name="Reconfigure" />
    </keybind>

    <keybind key="W-k">
      <action name="ToggleMaximize" />
    </keybind>

    <keybind key="W-j">
      <action name="iconify" />
    </keybind>

    <keybind key="W-l">
      <action name="SnapToEdge" direction="right" />
    </keybind>

    <keybind key="W-h">
      <action name="SnapToEdge" direction="left" />
    </keybind>

    <keybind key="W-1">
      <action name="GoToDesktop" to="1" wrap="no" />
    </keybind>

    <keybind key="W-2">
      <action name="GoToDesktop" to="2" wrap="no" />
    </keybind>

    <keybind key="W-3">
      <action name="GoToDesktop" to="3" wrap="no" />
    </keybind>

    <keybind key="W-S-1">
      <action name="SendToDesktop" to="1" />
    </keybind>

    <keybind key="W-S-2">
      <action name="SendToDesktop" to="2" />
    </keybind>

    <keybind key="W-S-3">
      <action name="SendToDesktop" to="3" />
    </keybind>

    <keybind key="W-f">
      <action name="ToggleFullscreen" />
    </keybind>

  </keyboard>

  <mouse>
    <default />
    <context name="Frame">
      <mousebind button="W-Left" action="Press">
        <action name="Focus" />
        <action name="Raise" />
      </mousebind>
      <mousebind button="W-Left" action="Drag">
        <action name="Move" />
      </mousebind>
      <mousebind button="W-Right" action="Press">
        <action name="Focus" />
        <action name="Raise" />
      </mousebind>
      <mousebind button="W-Right" action="Drag">
        <action name="Resize" />
      </mousebind>
    </context>

  </mouse>

</labwc_config>
